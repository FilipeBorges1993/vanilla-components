{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "lib": [
      "esnext",
      "dom",
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "/@theme/*": [".vitepress/theme/*"],
    },
    "allowJs": true
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.js",
    ".vitepress/**/*",
    "utils/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
